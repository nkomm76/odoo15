<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Nkomm Partner Form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[2]" position="inside">
                <field name="digital_invoice" widget="boolean_toggle"
                       help="MÃ¶chte der Kunde Rechnungen digital erhalten?"/>
            </xpath>
            <xpath expr="//field[@name='title']" position="replace"/>
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <group attrs="{'invisible': [('is_company','=', True)]}">
                    <group>
                        <field name="title" options="{&quot;no_open&quot;: True}" placeholder="e.g. Mister"
                               attrs="{'invisible': [('is_company', '=', True)]}"/>
                        <field name="first_name" placeholder="Vorname"/>
                        <field name="last_name" placeholder="Nachname"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//span[@name='address_name']" position="before">
                <field name="sequence_number" string="Customer Number"/>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='name']"
                   position="attributes">
                <attribute name="string">Full Name</attribute>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='name']"
                   position="before">
                <field name="title" options="{&quot;no_open&quot;: True}" placeholder="e.g. Mister"/>
                <field name="first_name" placeholder="Vorname"/>
                <field name="last_name" placeholder="Nachname"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_tree" model="ir.ui.view">
        <field name="name">Nkomm Partner Tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='display_name']" position="before">
                <field name="sequence_number" string="Customer Number" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>

