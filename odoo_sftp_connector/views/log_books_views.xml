<odoo>
    <data>

        <record id="log_book_view_form" model="ir.ui.view">
            <field name="name">Log Book Form</field>
            <field name="model">log.book</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <header>
                        <button name="export_data" attrs="{'invisible': [('state', '=', 'done')]}" string="Export Data to SFTP" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="state" invisible="1"/>
                                <field name="name" readonly="1"/>
                                <field name="date" readonly="1"/>
                            </group>
                            <!--<group>
                                <field name="model_name" domain="[('model', '=', 'account.move')]"/>
                            </group>-->
                        </group>
                        <notebook>
                            <page string="Log Books Lines">
                                <field name="attachment_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="datas"/>
                                        <field name="response_message"/>
                                        <field name="file_sent" widget="boolean_toggle"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="log_book_view_tree" model="ir.ui.view">
            <field name="name">Log book Tree</field>
            <field name="model">log.book</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="name" readonly="1"/>
                    <field name="date" readonly="1"/>
                    <field name="state" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="log_book_action" model="ir.actions.act_window">
            <field name="name">Log Book</field>
            <field name="res_model">log.book</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="shopify_mismatch_ept" name="Log Book"
                  parent="odoo_sftp_connector.menu_api_section"
                  action="odoo_sftp_connector.log_book_action"
                  sequence="30"/>


    </data>
</odoo>