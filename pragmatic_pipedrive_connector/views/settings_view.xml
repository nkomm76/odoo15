<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="url_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.url</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')][@data-key='general_settings']/div[2]" position="inside">
                <h2>Pipedrive Connector</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pd_authorize_url">
                                Authorize URL
                            </label>
                            <field name="pd_authorize_url"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                       <div class="o_setting_right_pane">
                            <label for="pd_token_url">
                                Token URL
                            </label>
                            <field name="pd_token_url"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                       <div class="o_setting_right_pane">
                            <label for="pd_api_url">
                                API Url
                            </label>
                            <field name="pd_api_url"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>


